<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light Mode Defaults) -->
    <style name="Theme.NewsApiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Your original light primary -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Your original light variant -->
        <item name="colorOnPrimary">@color/white</item> <!-- Your original light onPrimary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Your original light secondary -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- Your original light secondary variant -->
        <item name="colorOnSecondary">@color/black</item> <!-- Your original light onSecondary -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Add standard attributes using theme attributes for better adaptability -->
        <!-- These will resolve to default Material Component light colors unless overridden in colors.xml -->
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <!-- Customize other theme attributes here if needed -->
    </style>


    <!-- Splash Screen Theme (Light) -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Background color for the splash screen in light mode -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Theme to transition to after the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.NewsApiApp</item>
    </style>
</resources>